{
  "name": "read-helper",
  "type": "module",
  "version": "1.0.3",
  "description": "A CLI tool to help you read source code",
  "author": "RainyLiao",
  "license": "MIT",
  "keywords": [
    "cli",
    "helper",
    "read",
    "source-code"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "rh": "./bin/rh.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsup src/index.ts --format esm --clean --dts",
    "stub": "tsup src/index.ts --format esm",
    "dev": "tsup src/index.ts --format esm --watch",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "sade": "^1.8.1",
    "zx": "^7.2.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "1.0.0-beta.28",
    "eslint": "^8.52.0",
    "lint-staged": "^15.0.2",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^7.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
