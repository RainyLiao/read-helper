{
  "compilerOptions": {
    "target": "es2020",
    "baseUrl": ".",
    "module": "es2020",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ]
}
